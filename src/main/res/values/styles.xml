<resources>

    <style name="ScreensaverTheme" parent="@android:style/Theme.Material">
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:popupMenuStyle">?android:attr/actionOverflowMenuStyle</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
    </style>

    <style name="ScreensaverActivityTheme" parent="@android:style/Theme.Material" />

    <style name="clock_style">
        <item name="android:textSize">@dimen/clock_text_size</item>
        <item name="android:textColor">@color/clock_white</item>
    </style>

    <style name="label">
        <item name="android:textSize">@dimen/label_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="update_title_style">
        <item name="android:textSize">@dimen/update_system_title_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="update_summary_style" parent="label">
        <item name="android:textColor">@color/update_summary_color</item>
    </style>

</resources>
